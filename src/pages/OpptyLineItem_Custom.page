                </tr>
            </table> -->
            
        <!----------------Adding Custom Product Screen -------------->
           <div align="right" style="width: 100%">
                <apex:commandButton value="Add Custom Product" action="{!addRow}" reRender="pbTable2, errorPanel"  status="splashStatus"/>              
            </div>
        <apex:pageBlockTable id="pbTable2" value="{!lineItemList}" var="li" >
<apex:column headerValue="Product Category" style="width:150px;">
    <apex:facet name="header"> 
        <apex:outputLabel value="Product Category" />
    </apex:facet>
    <apex:inputField value="{!li.oli.Product_Category_New__c}" />
</apex:column>

<apex:column headerValue="Style Desc" style="width:150px;">
    <apex:facet name="header"> 
        <apex:outputLabel value="Style Description" />
    </apex:facet>
    <apex:inputField value="{!li.oli.Style_Description__c}"/>
</apex:column>

<apex:column headerValue="BK" style="width:150px;">
    <apex:facet name="header"> 
        <apex:outputLabel value="BK" />
    </apex:facet>
    <apex:inputField value="{!li.oli.Bk__c}"/>
</apex:column>

<apex:column headerValue="Size" style="width:150px;">
    <apex:facet name="header"> 
        <apex:outputLabel value="Size" />
    </apex:facet>
    <apex:inputField value="{!li.oli.Size__c}" />
</apex:column>

<apex:column headerValue="Color Desc" style="width:150px;">
    <apex:facet name="header"> 
        <apex:outputLabel value="Color Description" />
    </apex:facet>
<apex:inputField value="{!li.oli.Color_Description__c}"/>
</apex:column>

<apex:column headerValue="Quantity" style="width:150px;">
    <apex:facet name="header"> 
        <apex:outputLabel value="Unit of Measure" />
    </apex:facet>
<apex:inputField value="{!li.oli.Unit_of_Measure__c}"/>
</apex:column>

<apex:column headerValue="Selling Price" style="width:150px;">
