    </style>
    <apex:pageMessages />
    <apex:pageBlock >
        <div style='height:300px;'>
            <apex:outputPanel rendered="{!showSuccess}" id="success">
                <div id="popup">
                    <table>
                        <tr>
                            <td><img src="{!URLFOR($Resource.Confirm)}"/></td>
                            <td>Your GTM Access Token was Saved Successfully</td>
                        </tr>
                    </table>
                </div>
            </apex:outputPanel>
            
            <apex:outputPanel rendered="{!!showSuccess}" id="failure">
                <div id="popup1">
                    <table>
                        <tr>
                            <td><img src="{!URLFOR($Resource.Warning)}" style="width:20px;height:20px;"/></td>
                            <td>OOPS!</td>
                        </tr>
                        <tr>
                            <td colspan='2'>{!ErrorMessage}</td>
                        </tr>
                    </table>
                </div>
            </apex:outputPanel>
        </div>
    </apex:pageBlock>
</apex:page>